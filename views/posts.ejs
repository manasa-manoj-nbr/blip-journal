<%- include('partials/header', { title , user: user }) %>

<div class="mx-20 my-20 text-black-700 pt-10">
<h1 class="text-3xl text-center font-bold tracking-loose text-gray-900 my-4"> All Posts [<%= posts.length %>]</h1>
    <% if (posts?.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <% posts.forEach(post => { %>
                <div class="flex flex-col bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
                    <% if (post?.images?.length) { %>
                        <img class="rounded-t-lg w-full h-48 object-cover" src="<%- post.images[0].url %>" alt="" />
                    <% } %>
                    <div class="p-5 flex flex-col flex-grow justify-between">
                        <div>
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900"><%- post.title %></h5>
                            <p class="mb-3 font-normal text-gray-700">
                                <%- post.content.length > 200 ? post.content.substring(0, 200) + '...' : post.content %>
                            </p>
                        </div>
                        <div class="mt-4 flex justify-between">
                            <a href="/posts/<%= post._id %>" class="inline-block px-3 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                                Read more
                            </a>
                            <p class="mt-3 text-right text-sm italic font-semibold text-gray-400">
                                by <%= post.author.username %> on <%= post.createdAt.toDateString() %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <h1>No posts found</h1>
    <% } %>
</div>

<%- include('partials/footer') %>
